alias h='history'
alias hs='history | grep '

alias vi='vim'
alias svim='sudo vim'
alias svi='sudo vim'
alias edit='vim'

alias rm='rm -I'

alias sshlist="grep -w -i "Host" ~/.ssh/config | sed 's/Host//'"
alias sshconfig="vim ~/.ssh/config"

alias tgz='tar -zxvf'
alias tarc='tar -cvf'

alias cp="cp -i"                                                # Confirm before overwriting something
alias df='df -h'                                                # Human-readable sizes
alias free='free -m'                                            # Show sizes in MB
